<div class="mt-4">
  <div class="row">
    {{#each beverages}}
      <div class="col-sm-6 col-lg-4">
        <div class="card" style="margin-top: 16px;">
          <a href="/v1/beverages/detail/{{this.slug}}"></a>
          <img
            class="card-img-top"
            src="{{this.image}}"
            alt="{{this.name}}"
            style="width: auto; height: 250px"
          />
          </a>
          
          <div class="card-body">
            <a href="/v1/beverages/detail/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5></a>
            <p class="card-text">{{this.description}}</p>
            <a href="/v1/beverages/detail/{{this.slug}}" class="btn btn-primary">Nhấn em đi</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>